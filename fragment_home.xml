<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_marginTop="10dp">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ln"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:id="@+id/logoH"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Family Links"

            android:id="@+id/textView13"
            android:textSize="40dp"
            android:textStyle="bold|italic"
            android:textColor="@color/md_green_800"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"

        android:layout_below="@+id/ln"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/d"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ln1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/ln2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/ln2"
        android:layout_alignEnd="@+id/ln2">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="110dp"

            android:id="@+id/c"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Créer des liens"

                android:id="@+id/textView14"
                android:textSize="18dp"
                android:textStyle="italic"
                android:textColor="@color/md_green_800"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Créez un trésor familial qui donne vie à votre histoire familiale. "

                android:id="@+id/textView20"
                android:textSize="12dp"
                android:textStyle="bold|italic"
                android:textColor="@color/md_black_1000"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" /></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ln2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/d"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/ln"
        android:layout_alignEnd="@+id/ln">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="110dp"

            android:id="@+id/a"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arbre Familial"

                android:id="@+id/textView15"
                android:textSize="18dp"
                android:textStyle="italic"
                android:textColor="@color/md_green_800"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Découvrez et conservez votre patrimoine familial pour les générations à venir."

                android:id="@+id/textView16"
                android:textSize="12dp"
                android:textStyle="bold|italic"
                android:textColor="@color/md_black_1000"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" /></LinearLayout>
    </LinearLayout>




</RelativeLayout>


